---
import "@/styles/tailwind.css";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import SeoMeta from "@/components/SeoMeta.astro";
import AnimatedBackground from "@/components/AnimatedBackground.astro";
import { languageList } from "@/i18n/ui";

interface Props {
  title?: string;
  description?: string;
  keywords?: string;
  ogImage?: string;
  canonical?: string;
  noindex?: boolean;
}

const {
  title = "CodeXtremeOS: Windows Optimizado para Gaming | Mejora FPS y Rendimiento",
  description = "Descarga CodeXtremeOS, la mejor versión de Windows optimizada para gaming y máximo rendimiento. Eleva tu experiencia de juego a otro nivel.",
  keywords = "Windows optimizado, gaming, rendimiento, CodeXtremeOS, sistema operativo para gamers, PC gaming, optimización Windows",
  ogImage = "https://www.codextreme.me/imagen-previa.png",
  canonical,
  noindex = false
} = Astro.props;

const currentLang = Astro.currentLocale || "en";
---

<!doctype html>
<html lang={currentLang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- SEO Meta Tags y URLs canónicas -->
    <SeoMeta title={title} description={description} canonical={canonical} noindex={noindex} />

    <!-- Título SEO dinámico -->
    <title>{title}</title>

    <!-- Meta Tags SEO dinámicos -->
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />

    <!-- Open Graph dinámico -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />

    <!-- Twitter Cards dinámico -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- Favicon y iconos -->
    <link rel="icon" href="/favicon.webp" sizes="32x32" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <meta name="theme-color" content="#6B5B95" />

    <!-- Schema Markup JSON-LD -->
    <script type="application/ld+json">
      {
        "@context": "http://schema.org",
        "@type": "WebSite",
        "url": "https://www.codextreme.me",
        "name": "CodeXtremeOS",
        "description": "La mejor versión de Windows modificada para gaming y máximo rendimiento.",
        "potentialAction": {
          "@type": "SearchAction",
          "target": "https://www.codextreme.me/buscar?q={search_term_string}",
          "query-input": "required name=search_term_string"
        }
      }
    </script>
  </head>
  <body
    class="bg-gradient-to-br from-gray-900 to-gray-800 text-gray-100 pt-20 min-h-screen relative"
  >
    <!-- Fondo animado -->
    <AnimatedBackground type="particles" />
    
    <Header />
    <main class="min-h-[calc(100vh-8rem)] relative z-10">
      <!-- Contenido -->
      <slot />
    </main>
    <Footer />
  </body>
</html>
